# Maintainer: chiku <chirantan.mitra@gmail.com>

pkgname="mjm"
pkgver="1.1"
_internalname="mjwm"
_internalversion="1.1"
pkgrel="5"
pkgdesc="Create jwm's menu from desktop files"
arch=("i686" "x86_64")
url="https://github.com/chiku/mjwm"
license=("GPL2")
optdepends=("jwm: for using generated menu")
source=("https://github.com/chiku/${_internalname}/archive/v${_internalversion}.tar.gz")
md5sums=("fa0fd508a0856e8a40f9ff31823da83e")
sha1sums=("fd221a3d6052a220b8827a0ee68953b021df96b9")

build() {
  cd "$srcdir/${_internalname}-${_internalversion}"

  touch NEWS AUTHORS ChangeLog
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/${_internalname}-${_internalversion}"/src

  make DESTDIR="$pkgdir" install
  cd ${pkgdir}/usr/bin
  ln -sv ${_internalname} ${pkgname}
}
