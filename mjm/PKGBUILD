# Maintainer: chiku <chirantan.mitra@gmail.com>

pkgname="mjm"
_internalname="mjwm"
pkgver="2.1"
pkgrel="1"
pkgdesc="Create jwm's menu from desktop files"
arch=("i686" "x86_64")
url="https://github.com/chiku/mjwm"
license=("GPL")
optdepends=("jwm: for using generated menu")
source=("https://github.com/chiku/${_internalname}/archive/v${pkgver}.tar.gz")
md5sums=("d5d001ae4cbf381302f2c88c8244ceed")
sha1sums=("5d54fee6ff21df42010c98788b5a0ec4d088ec19")

build() {
  cd "$srcdir/${_internalname}-${pkgver}"

  touch NEWS AUTHORS
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/${_internalname}-${pkgver}"/src

  make DESTDIR="$pkgdir" install
  cd ${pkgdir}/usr/bin
  ln -sv ${_internalname} ${pkgname}
}
