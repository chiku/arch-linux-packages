# Maintainer: chiku <chirantan.mitra@gmail.com>

pkgname="mjm"
pkgver="1.1"
_internalname="mjwm"
_internalversion="1.0"
pkgrel="4"
pkgdesc="create jwm's menu"
arch=("i686" "x86_64")
url="https://github.com/chiku/mjwm"
license=("GPL2")
optdepends=("jwm: for using generated menu")
source=("https://github.com/chiku/${_internalname}/archive/v${_internalversion}.tar.gz")
md5sums=("e16007bf6b5ec26c71d186c2b7bc38a8")
sha1sums=("d2299b505fa80f981930e09cfae3b842ce3df8c0")

build() {
  cd "$srcdir/${_internalname}-${_internalversion}"

  touch NEWS AUTHORS ChangeLog
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/${_internalname}-${_internalversion}"

  make DESTDIR="$pkgdir" install
  cd ${pkgdir}/usr/bin
  ln -sv ${_internalname} ${pkgname}
}
